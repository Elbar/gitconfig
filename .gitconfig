[alias]
    st = status
    ss = status -sb

    addi = add --patch
    unstage = reset HEAD --
    ls = ls-files


[branch "master"]
    mergeoptions = --no-ff --no-commit


[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
    ui = auto


[core]
    autocrlf = input
    editor = mcedit
    safecrlf = true


[format]
    pretty = format:'%C(green)%h%Creset %C(cyan)%ad%x08%x08%x08%x08%x08%x08%Creset -%C(yellow)%d%Creset %s %C(green)[%Creset%C(cyan)%an%Creset%C(green)]%Creset'


[grep]
    linenumber = true


[log]
    date = iso


[merge]
    ff = no
